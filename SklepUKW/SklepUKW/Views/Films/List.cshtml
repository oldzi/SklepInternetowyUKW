@using SklepUKW.Infrastructure
@{
    ViewBag.Title = "List";
    Layout = null;
}

<h2>List</h2>

<table border=1px>
    @foreach (var film in Model)
    {
        <tr>
            <td><img src="@Url.PostersPath(film.PosterName)"></td>
