@model IEnumerable<SklepUKW.Models.Film>
@using SklepUKW.Infrastructure
@{
    ViewBag.Title = "List";
    Layout = null;
}

<h2>List</h2>

<table border=1px>
    @foreach (var film in Model)
    {
    <tr>
        <td><a href="@Url.Action("Details", "Films", new { id = film.FilmId})"><img src="@Url.PostersPath(film.PosterName)" /></a></td>
        <td>@film.Title</td>
        <td>@film.Price</td>
        <td>Dodaj do koszyka</td>
    </tr>
    } 
